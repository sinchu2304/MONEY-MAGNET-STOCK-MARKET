        }
    </style>

</head>

<body>
    {{>navbar}}
    <h1 id="heading1" text align="center">LOGIN</h1>
    <h2 id="heading2" text align="center">Dont have an account?? <a href="/Users/rakshith/Documents/mernbackend/templates/views/register.hbs">Register here</a> </h2>
    <div id="div1">
        <form action="/login" method="POST">
            <input id="email" type="text" placeholder=" Your Email" name="email" /> <br>
            <label id="lb1" style="color:red ;visibility:hidden" ;>Invalid</label><br>
            <input id="password" type="password" placeholder="Password" name="password" /><br>
            <span class="eye" onclick="toggle_eye()">
            <i id="hid1" class="fa fa-eye"></i>
            <i id="hid2" class="fa fa-eye-slash"></i>
            </span>
            <button type="submit" id="btn1" onclick="validate()">LOGIN</button>
        </form>
    </div>

</body>
<script type="text/javascript">
    function validate() {
        var text = document.getElementById("email").value;
        var regs = /^([a-z A-Z 0-9\.-]+)@([a-z 0-9 -]+).([a-z]{2,20})$/;
        if (regs.test(text)) {
            document.getElementById("lb1").innerHTML = "Valid";
            document.getElementById("lb1").style.visibility = "visible";
            document.getElementById("lb1").style.color = "green";
        } else {
            document.getElementById("lb1").innerHTML = "Invalid";
            document.getElementById("lb1").style.visibility = "visible";
            document.getElementById("lb1").style.color = "red";
        }


    }
   

    function toggle_eye() {
        var a = document.getElementById("password");
        var b = document.getElementById("hid1");
        var c = document.getElementById("hid2");
        if (a.type == "password") {
            a.type = "text";
            b.style.display = "block";
            c.style.display = "none";

        } else {
            a.type = "password";
            b.style.display = "none";
            c.style.display = "block";

        }
    }
</script>

</html>