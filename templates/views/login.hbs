            background-repeat:no-repeat;
        }
        #heading1 {
            font-size: 45px;
            font-family: "Georgia";
            margin-top: 7%;
            color: azure;
        }
        #heading2 {
            margin-right: 10px;
            color: azure;
        }
        
        #div1 {
            text-align: center;
            //border-style: solid;
            //border-color: rgb(202, 211, 240);
            //border-width: 30;
            //padding: 30px;
            margin: auto;
            width: 600px;
            height:400px ;
            position: absolute;
            right:400px;
        }
        
        #email {
            font-size: 30px;
            font-family: "Times New Roman";
            padding: 20px;
            border-style: solid;
        }
        
        #password {
            font-size: 30px;
            font-family: "Times New Roman";
            padding: 20px;
            border-style: solid;
        }
        
        #btn1 {
            font-size: 30px;
            font-family: "sans serif";
        }
        
        #hid1 {
            position: absolute;
